<script>
  const thumbs = document.querySelectorAll('.button');
  const img = document.getElementById('hero');

  thumbs.forEach(thumb => {
    thumb.addEventListener('click', () => {
      const thumbId = thumb.id;
      const mainImgSrc = `/src/assets/illustration/${thumbId}.jpg`;
      img.src = mainImgSrc;
    });
  });
</script>

<style>
  .wrap {
    display: flex;
    width: 100%;
    height: 615px;
    gap: 6px;
  }
  .thumbs {
    display: grid;
    overflow: scroll;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 6px;
  }
  .button {
    border: 0;
    padding: 0;
    background: none;
    cursor: pointer;
  }
  .button img {
    display: block;
  }
  #hero {
    width: 100%;
    object-fit: cover; /* Ensures the image covers the container while maintaining aspect ratio */
  }
</style>